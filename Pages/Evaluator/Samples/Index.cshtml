@page
@model RenderingRazorPartialViewExample.Pages.Evaluator.Samples.Index

@{
    Layout = "_Layout";
}

<div class="container">
    <select class="select-container" name="filterSelect"
            hx-get
            hx-target="#view-samples"
    >
        <option value="0" selected>
            Select filter ...
        </option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
    </select>
    
    <div class="container" id="view-samples">
        @foreach (var sample in Model.SampleList)
        {
            <partial name="_SampleCardView" model=@sample/>
        }
    </div>
    
</div>



